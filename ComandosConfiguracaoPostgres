/* ambiente linux faz melhor uso da memoria(aloca), otimizado para 1/4 do disponivel da ram: 32/4=8GB*/
ALTER SYSTEM SET shared_buffers = '8GB';

/* memoria cache de buffer usada nos indices pelo planner(nao aloca), otimizado para 3/4 do disponivel da ram: 32/4*3=24GB*/
ALTER SYSTEM SET effective_cache_size = '24GB';

/* memoria maxima usada em operações de manutenção(pouco usado): creates, alters table, dumps...*/
ALTER SYSTEM SET maintenance_work_mem = '2GB';

/* memoria maxima usada em operações de manutenção(pouco usado): creates, alters table, dumps...*/
ALTER SYSTEM SET checkpoint_completion_target = '0.9';

/* wal_buffers é 1/32 do tamanho de shared_buffers. Maximo 16MB */
ALTER SYSTEM SET wal_buffers = '16MB';

/* tempo estimado de pesquisa para proxima pagina de disco aleatoria. */
ALTER SYSTEM SET random_page_cost = '1.1';


